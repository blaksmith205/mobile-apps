<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_view_message_rv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/formatted_message_summary" />

    <TextView
        android:id="@+id/tv_view_message_rv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/formatted_message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/rv_view_padding" />
</LinearLayout>