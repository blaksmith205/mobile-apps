<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/rv_side_padding"
    android:paddingTop="@dimen/rv_top_padding"
    android:paddingEnd="@dimen/rv_side_padding">

    <TextView
        android:id="@+id/tv_view_message_rv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/formatted_message_summary" />

    <TextView
        android:id="@+id/tv_view_message_rv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/formatted_message" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/rv_divider_height"
        android:background="?android:attr/dividerVertical" />
</LinearLayout>